{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Bank Profile Config",
  "type": "object",
  "properties": {
    "bank_name": { "type": "string" },
    "sections": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "section_name": { "type": "string" },
          "match_text": { "type": "string" }, 
          "columns": {
            "type": "object",
            "properties": {
              "transaction_date": { "type": "integer" },
              "posting_date": { "type": "integer" },
              "description": { "type": "integer" },
              "amount": { "type": "integer" }
            },
            "required": ["transaction_date", "description", "amount"]
          },
          "skip_footer_rows": { "type": "boolean" }
        },
        "required": ["section_name", "match_text", "columns"]
      }
    }
  },
  "required": ["bank_name", "sections"]
}
